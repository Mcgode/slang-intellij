<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>slang.plugin</id>
    <name>Slang Language Support</name>
    <vendor>Max Godefroy</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="Slang file"
            implementationClass="slang.plugin.language.SlangFileType"
            fieldName="INSTANCE"
            language="Slang"
            extensions="slang"/>
        <lang.parserDefinition
            language="Slang"
            implementationClass="slang.plugin.language.SlangParserDefinition" />
        <lang.syntaxHighlighterFactory
            language="Slang"
            implementationClass="slang.plugin.code.highlighting.SlangSyntaxHighlighterFactory" />
        <notificationGroup
                displayType="BALLOON"
                id="Slang" />
    </extensions>

    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <server
                id="slangLanguageServer"
                name="Slang Language Server"
                factoryClass="slang.plugin.lsp.SlangLanguageServerFactory" />

        <languageMapping language="Slang" serverId="slangLanguageServer" />
    </extensions>
</idea-plugin>
